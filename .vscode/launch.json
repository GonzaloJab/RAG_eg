    "version": "0.2.0",
    "configurations": [
        {
            "name": "üöÄ Run Streamlit RAG App",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "main.py",
                "--server.port=8501",
                "--server.address=localhost",
                "--browser.gatherUsageStats=false"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "üåê Streamlit Server (Production)",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "main.py",
                "--server.port=8501",
                "--server.address=localhost",
                "--browser.gatherUsageStats=false"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "üîß Streamlit with Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "main.py",
                "--server.port=8502",
                "--server.address=localhost",
                "--browser.gatherUsageStats=false",
                "--logger.level=debug"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}